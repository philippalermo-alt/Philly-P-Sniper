server {
    server_name phillyedge.ai www.phillyedge.ai 100.48.72.44;

    location /api/ {
        proxy_pass http://localhost:8000;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_read_timeout 300;
    }

    location / {
        proxy_pass http://localhost:3000/;
        proxy_http_version 1.1;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Host $http_host;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_read_timeout 86400;
    }

    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/phillyedge.ai/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/phillyedge.ai/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot
}

server {
    if ($host = www.phillyedge.ai) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


    if ($host = phillyedge.ai) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


    listen 80;
    server_name phillyedge.ai www.phillyedge.ai 100.48.72.44;
    return 404; # managed by Certbot
}
